<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>KocaeliUni.store Admin Paneli</title>

    @Styles.Render("~/Content/css")
    <style>
        .page-header {
            padding-bottom: 5px;
            margin: 10px;
            border-bottom: 1px solid #eee;
        }
        .navbar-inverse .navbar-nav>.active>a{
            color: #fff;
            background-color: #337ab7;
        }
        .navbar-brand {
        padding:0;
        }
    </style>
 
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="@Url.Action("Index","Order")" title="KocaeliUni.store">
                    <img style="max-width:50px; margin-right: 10px; display:inline-block"
                         src="~/Fasticon-Shop-Cart-Shop-cart.ico">KocaeliUni.store
                </a>              
                  
            </div>
            <!-- Top Menu Items -->
     
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                  
                    <li class="@(ViewBag.Title == "Order" ? "active" : "")">
                        <a href="@Url.Action("Index", "Order")"><i class="fa fa-fw fa-shopping-cart"></i> Siparişler</a>
                    </li>
                    <li class="@(ViewBag.Title == "Product" ? "active" : "")">
                        <a href="@Url.Action("Index", "Product")"><i class="fa fa-fw fa-table"></i> Ürünler</a>
                    </li>
                  
                    <li class="@(ViewBag.Title == "Customer" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customer")"><i class="fa fa-fw fa-male"></i> Müşteriler</a>
                    </li>
                 
                    @*<li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i class="fa fa-fw fa-arrows-v"></i> Dropdown <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo" class="collapse">
                            <li>
                                <a href="#">Dropdown Item</a>
                            </li>
                            <li>
                                <a href="#">Dropdown Item</a>
                            </li>
                        </ul>
                    </li>*@
                    
                 
                    <li class="@(ViewBag.Title == "Logout" ? "active" : "")">
                        <a href="@Url.Action("Logout", "Login")"><i class="fa fa-fw fa-sign-out"></i>Çıkış</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
              
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                           <img  src="~/Content/Images/logo.png" style="height:90px"/>
                        </h1>
                    
                        @RenderBody()
                    </div>
                </div>
                <!-- /.row -->
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Orhun Şahin tarafından Proje A ödevi için geliştirilmiştir.</p>
                </footer>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->

    <!-- jQuery and Bootstrap Core JavaScript -->
    @Scripts.Render("~/Content/js")
    @RenderSection("scripts", required: false)
   
</body>
</html>